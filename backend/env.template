# PortfolioAI Backend Configuration Template
# Copy this file to .env and fill in your actual credentials

# FastAPI Configuration
# Environment: development, production, testing
ENVIRONMENT=development

# Server Configuration
HOST=127.0.0.1
PORT=8003
RELOAD=true
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration (for future use)
DATABASE_URL=sqlite:///./portfolioai.db

# API Keys and External Services
# Replace with actual keys when integrating real services

# IBM Watsonx.ai Configuration
# Get API key from: https://cloud.ibm.com/iam/apikeys
WATSONX_APIKEY=YOUR_API_KEY_HERE

# Watsonx service URL (region-specific endpoint)
# Examples: 
#   - US South: https://us-south.ml.cloud.ibm.com
#   - EU-DE: https://eu-de.ml.cloud.ibm.com
#   - EU-GB: https://eu-gb.ml.cloud.ibm.com
#   - JP-TOK: https://jp-tok.ml.cloud.ibm.com
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# Your Watsonx project ID
# Find it in your project settings on Watsonx.ai
PROJ_ID=YOUR_PROJECT_ID_HERE

# Market Data API Keys (for real-time data integration)
ALPHA_VANTAGE_API_KEY=YOUR_ALPHA_VANTAGE_KEY_HERE
FINNHUB_API_KEY=YOUR_FINNHUB_KEY_HERE
POLYGON_API_KEY=YOUR_POLYGON_KEY_HERE

# AI/ML Model Configuration
MODEL_NAME=meta-llama/llama-3-1-70b-instruct
MAX_NEW_TOKENS=1000
TEMPERATURE=0.7

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Portfolio Configuration
DEFAULT_RISK_FREE_RATE=0.045
MAX_PORTFOLIO_POSITIONS=50
REBALANCING_THRESHOLD=0.05

# Logging Configuration
LOG_FILE=logs/portfolioai.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5