# PortfolioAI Backend Configuration
# Copy this file to .env and fill in your actual credentials

# FastAPI Configuration
ENVIRONMENT=development
HOST=127.0.0.1
PORT=8003
RELOAD=true
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# IBM Watsonx.ai Configuration
# Get API key from: https://cloud.ibm.com/iam/apikeys
WATSONX_APIKEY=your_watsonx_api_key_here

# Watsonx service URL (region-specific endpoint)
# Examples: 
#   - US South: https://us-south.ml.cloud.ibm.com
#   - EU-DE: https://eu-de.ml.cloud.ibm.com
#   - EU-GB: https://eu-gb.ml.cloud.ibm.com
#   - JP-TOK: https://jp-tok.ml.cloud.ibm.com
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# Your Watsonx project ID
# Find it in your project settings on Watsonx.ai
PROJ_ID=your_project_id_here

# Optional: Watsonx username (defaults to 'apikey')
WATSONX_USERNAME=apikey

# AI Model Configuration
MODEL_NAME=ibm/granite-3-2-8b-instruct
MAX_NEW_TOKENS=2000
TEMPERATURE=0.3

# Service Configuration
WATSONX_MAX_RETRIES=3
WATSONX_RETRY_DELAY=1.0
WATSONX_TIMEOUT=30.0
WATSONX_CACHE_TTL=3600

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30